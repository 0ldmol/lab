<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- 标题行 -->
    <TableRow
        android:background="@android:color/darker_gray"
        android:padding="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="Hello TableLayout"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </TableRow>

    <!-- Open 行 -->
    <TableRow android:padding="8dp">
        <TextView android:text="" android:layout_width="0dp" android:layout_weight="0"/>
        <TextView android:text="Open..." android:textColor="@android:color/white"/>
        <TextView android:text="Ctrl-O" android:gravity="end" android:textColor="@android:color/white"/>
    </TableRow>

    <!-- Save 行 -->
    <TableRow android:padding="8dp" android:background="#222222">
        <TextView android:text="" android:layout_width="0dp" android:layout_weight="0"/>
        <TextView android:text="Save..." android:textColor="@android:color/white"/>
        <TextView android:text="Ctrl-S" android:gravity="end" android:textColor="@android:color/white"/>
    </TableRow>

    <!-- Save As 行 -->
    <TableRow android:padding="8dp">
        <TextView android:text="" android:layout_width="0dp" android:layout_weight="0"/>
        <TextView android:text="Save As..." android:textColor="@android:color/white"/>
        <TextView android:text="Ctrl-Shift-S" android:gravity="end" android:textColor="@android:color/white"/>
    </TableRow>

    <!-- Import 行 -->
    <TableRow android:padding="8dp" android:background="#222222">
        <TextView android:text="X" android:textStyle="bold" android:gravity="center" android:textColor="@android:color/white"/>
        <TextView android:text="Import..." android:textColor="@android:color/white"/>
        <TextView android:text="Ctrl-E" android:gravity="end" android:textColor="@android:color/white"/>
    </TableRow>

    <!-- Export 行 -->
    <TableRow android:padding="8dp">
        <TextView android:text="X" android:textStyle="bold" android:gravity="center" android:textColor="@android:color/white"/>
        <TextView android:text="Export..." android:textColor="@android:color/white"/>
        <TextView android:text="Ctrl-E" android:gravity="end" android:textColor="@android:color/white"/>
    </TableRow>

    <!-- Quit 行 -->
    <TableRow android:padding="8dp" android:background="#222222">
        <TextView android:text="" android:layout_width="0dp" android:layout_weight="0"/>
        <TextView android:text="Quit" android:textColor="@android:color/white"/>
        <TextView android:text="" android:layout_width="0dp" android:layout_weight="0"/>
    </TableRow>

</TableLayout>