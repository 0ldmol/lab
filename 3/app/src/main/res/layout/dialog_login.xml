<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?android:attr/colorBackground">

    <!-- 实验要求的Username输入框（文档1-19）：修复标签闭合，规范自闭合格式 -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="?android:attr/editTextBackground"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:inputType="text"/>  <!-- 此处已规范自闭合，修复“Tag start is not closed”错误 -->

    <!-- 实验要求的Password输入框（文档1-20）：确保标签正确闭合 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:background="?android:attr/editTextBackground"
        android:padding="10dp"
        android:layout_marginBottom="24dp"
        android:inputType="textPassword"/>  <!-- 自闭合标签格式正确 -->

    <!-- 实验要求的Cancel/Sign in按钮（文档1-21~1-22）：标签闭合无误 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="?android:attr/colorButtonNormal"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:background="?android:attr/colorPrimary"
            android:textColor="?android:attr/colorBackground"/>

    </LinearLayout>

</LinearLayout>